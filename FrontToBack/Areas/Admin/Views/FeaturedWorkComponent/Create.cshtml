@using FrontToBack.Areas.Admin.ViewModels.FeaturedWorkComponent
@model FeaturedWorkComponentCreateVM


<div class="card">
    <div class="card-body">
        <div class="card-title">Add Featuredworkcomponent</div>
        <hr>
        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="featuredworkcomponent" asp-area="admin">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="form-group">
                <label asp-for="Photos"></label>
                <input asp-for="Photos" class="form-control">
                @*    <span class="text-danger" asp-validation-for="Photos"></span> *@
                @{
                    if (Html.ViewData.ModelState["Photos"] != null)
                    {
                        @foreach (var error in Html.ViewData.ModelState["Photos"].Errors)
                        {
                            <p class="text-danger">@error.ErrorMessage</p>
                        }
                    }
                }
            </div>

            <div class="form-group">
                <button class="btn btn-light px-5">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    @await Html.PartialAsync("_ValidationFormPartial")

    <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>



    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>

}
